package numericData;

import java.util.Scanner;
class Exercise3 {

	public static void main(String[] args) {
		String name;
		int num1;
		int num2;
		int num3;
		int num4;
		int num5;
		int num6;
		int sum;
		Scanner sc=new Scanner(System.in); //sc is new object for scanner input
		
		System.out.println("Please enter name: ");
		name=sc.nextLine();
		System.out.println("Welcome " + name + "!!!");
		
		System.out.println("\nPlease enter amount 1: ");
		num1=sc.nextInt();
		System.out.println("Amount 1 is " + num1);
		
		System.out.println("\nPlease enter amount 2: ");
		num2=sc.nextInt();
		System.out.println("Amount 2 is " + num2);
		
		System.out.println("\nPlease enter amount 3: ");
		num3=sc.nextInt();
		System.out.println("Amount 3 is " + num3);
		
		System.out.println("\nPlease enter amount 4: ");
		num4=sc.nextInt();
		System.out.println("Amount 4 is " + num4);
		
		System.out.println("\nPlease enter amount 5: ");
		num5=sc.nextInt();
		System.out.println("Amount 5 is " + num5);
		
		System.out.println("\nPlease enter amount 6: ");
		num6=sc.nextInt();
		System.out.println("Amount 6 is " + num6);
		
		
		sum=num1+num2+num3+num4+num5+num6;
		System.out.println("\nThe sum is " + sum);
		
	}

}
